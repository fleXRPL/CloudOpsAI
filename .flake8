[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    __init__.py: F401
    tests/*: F401, F403, F405
max-complexity = 10
statistics = True
count = True
show-source = True 